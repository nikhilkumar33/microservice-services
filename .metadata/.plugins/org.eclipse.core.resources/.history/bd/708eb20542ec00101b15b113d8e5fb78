package com.ecom.invoice.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.ecom.invoice.entity.Invoice;
import com.ecom.invoice.repository.InvoiceRepository;
import com.ecom.invoice.request.InvoiceRequest;

@Service
public class InvoiceServiceImpl implements InvoiceService
{
	@Autowired
	InvoiceRepository invoiceRepository;

	@Override
	public int createInvoice(InvoiceRequest request) {
		
		Invoice entity = new Invoice();
		entity.setItemName(request.getItemName());
		entity.setAmount(request.getAmount());
		entity.setQty(request.getQty());
		entity.setDescription(request.getDescription());
		entity.setTransactionId(request.getTransactionId());
		entity.setNote(request.getNote());

		entity = invoiceRepository.save(entity);
		return 0;
	}

}
